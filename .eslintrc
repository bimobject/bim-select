{
    "extends": "standard",
    "globals": {
        "angular": false
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": true,
            "variables": true 
        }],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }]
    }
}
